<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewWritingForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWritingForm"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewStruggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTranslation"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textViewFreshness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewStruggle"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/buttonDeleteEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/red_button_background"
        android:text="X"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:onClick="onDeleteButtonClick"
        android:clickable="true"
        android:focusable="true" />
</RelativeLayout>
